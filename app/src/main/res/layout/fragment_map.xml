<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.jiadu.mapdemo.view.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ded9c3"
        android:id="@+id/mv_mapview"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="放大"
                android:textSize="20sp"
                android:id="@+id/bt_magnify"
                />
            <Button
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_reduce"
                android:textSize="20sp"
                android:text="缩小"
                />
            <Button
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_centerpoint"
                android:textSize="20sp"
                android:text="设置原点"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll_path"
                >
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bt_path"
                     android:textSize="20sp"
                    android:text="设置路径"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="选择路线"
                    android:id="@+id/bt_choicepath"
                    >

                </Button>
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bt_deletepath"
                    android:textSize="20sp"
                    android:text="删除路径点"
                    />
            </LinearLayout>

            <Button
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="选择比例尺"
                android:id="@+id/bt_scale"
                >
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    style="@style/textstyle"
                    android:text="加速度X:"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="加速度Y:"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="加速度Z:"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="角速度X:"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="角速度Y:"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="角速度Z:"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="磁场强度X:"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="磁场强度Y:"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="磁场强度Z:"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="俯仰角(Pitch):"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="横滚角(Roll):"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="航向角(Yaw):"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="大气压:"
                    />
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_linearacc_x"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_linearacc_y"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_linearacc_z"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_anglevelocity_x"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_anglevelocity_y"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_anglevelocity_z"
                    android:text="---"
                    />
                <TextView
                    android:id="@+id/tv_magnet_x"
                    style="@style/textstyle"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_magnet_y"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_magnet_z"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_pitch"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_roll"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_yaw"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_pressure"
                    android:text="---"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textSize="20sp"
                android:lineSpacingExtra="10dp"
                android:text="加速度单位:  0.000244 G\n角速度单位:  0.061035 °/s\n地磁场单位:  0.006000 Gauss
                "
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>