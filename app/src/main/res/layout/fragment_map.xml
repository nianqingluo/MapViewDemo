<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:padding="25dp"
        >

        <com.jiadu.mapdemo.view.MapView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#afb6bc"
            android:id="@+id/mv_mapview"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="234px"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/youlan"
        >

        <Button
            style="@style/map_rightbutton"
            android:text="即时操控"
            android:id="@+id/bt_operate"
            />
        <Button
            style="@style/map_rightbutton"
            android:text="路线规划"
            android:id="@+id/bt_path_layout"
            />
        <Button
            style="@style/map_rightbutton"
            android:text="漫游行走"
            android:id="@+id/bt_walk"
            />
        <Button
            style="@style/map_rightbutton"
            android:text="地图还原"
            android:id="@+id/bt_map_backup"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="87px"
            android:background="@drawable/selector_xiala"
            android:text="一分钟"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:gravity="center"
            android:id="@+id/bt_time"
            />



    </LinearLayout>

    <!--各种数据-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@mipmap/youlan"
        android:visibility="gone"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="放大"
                    android:textSize="20sp"
                    android:id="@+id/bt_magnify"
                    />

                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bt_reduce"
                    android:textSize="20sp"
                    android:text="缩小"
                    />

                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bt_centerpoint"
                    android:textSize="20sp"
                    android:text="设置原点"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_path"
                >

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bt_path"
                        android:textSize="20sp"
                        android:text="设置路径"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="选择路线"
                        android:id="@+id/bt_choicepath"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="路线: 1"
                        android:textColor="#ff0000"
                        android:id="@+id/tv_path"
                        />

                    <Button
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bt_deletepath"
                        android:textSize="20sp"
                        android:text="删除路径点"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <Button
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bt_setrobotpoint"
                        android:textSize="20sp"
                        android:text="设置位置"
                        />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="--,--"
                        android:id="@+id/tv_robotpoint"
                        />

                    <EditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal"
                        android:id="@+id/et_robotpoint_x"
                        android:visibility="gone"
                        android:hint="x"
                        />

                    <EditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal"
                        android:visibility="gone"
                        android:id="@+id/et_robotpoint_y"
                        android:hint="y"
                        />

                    <Button
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:id="@+id/bt_confirmrobotpoint"
                        android:visibility="gone"
                        android:text="确定"
                        />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="选择比例尺"
                    android:id="@+id/bt_scale"
                    >
                </Button>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="比例尺 --:--"
                    android:id="@+id/tv_scale"
                    />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    style="@style/textstyle"
                    android:text="加速度X:"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="加速度Y:"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="加速度Z:"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="角速度X:"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="角速度Y:"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="角速度Z:"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="磁场强度X:"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="磁场强度Y:"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="磁场强度Z:"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="俯仰角(Pitch):"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="横滚角(Roll):"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="航向角(Yaw):"
                    />
                <TextView
                    style="@style/textstyle"
                    android:text="大气压:"
                    />
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_linearacc_x"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_linearacc_y"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_linearacc_z"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_anglevelocity_x"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_anglevelocity_y"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_anglevelocity_z"
                    android:text="---"
                    />
                <TextView
                    android:id="@+id/tv_magnet_x"
                    style="@style/textstyle"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_magnet_y"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_magnet_z"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_pitch"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_roll"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_yaw"
                    android:text="---"
                    />
                <TextView
                    style="@style/textstyle"
                    android:id="@+id/tv_pressure"
                    android:text="---"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textSize="20sp"
                android:lineSpacingExtra="10dp"
                android:text="加速度单位:  0.000244 G\n角速度单位:  0.061035 °/s\n地磁场单位:  0.006000 Gauss
                "
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>