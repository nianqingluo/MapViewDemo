<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="29px"
        android:background="@mipmap/dingbu"
        >

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="15px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="嘟嘟机器人操作系统 V1.0"
            android:textColor="#ffffff"
            android:textSize="20sp"
            />
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电源"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:id="@+id/tv_mainactivity_menu"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginRight="3px"
        >

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/zuolan"
            android:id="@+id/rg_mainactivity"
            >

            <RadioButton
                android:layout_width="233px"
                android:layout_height="153px"
                android:button="@null"
                android:checked="true"
                android:background="@drawable/selector_power"
                android:id="@+id/gb_power"
                />
            <RadioButton
                android:layout_width="233px"
                android:layout_height="153px"
                android:button="@null"
                android:background="@drawable/selector_clean"
                android:id="@+id/gb_clean"
                />
            <RadioButton
                android:layout_width="233px"
                android:layout_height="153px"
                android:button="@null"
                android:background="@drawable/selector_map"
                android:id="@+id/gb_map"
                />
            <RadioButton
                android:layout_width="233px"
                android:layout_height="153px"
                android:button="@null"
                android:background="@drawable/selector_setting"
                android:id="@+id/gb_setting"
                />

        </RadioGroup>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fl_fragment"
            >
        </FrameLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/dingbu"
        />

</LinearLayout>
